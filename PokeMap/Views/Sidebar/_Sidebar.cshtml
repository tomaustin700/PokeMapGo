<div id="sidebar">
    <div style="position: absolute; top: 50px; bottom: 0; height: auto; width: 100%;" data-bind="dxList: { dataSource: viewModel.pokemonCollection(), pageLoadMode: 'scrollBottom', onItemClick: CenterOnItem }">
        <div style="height: 50px; width: 100%; position: relative">
            <img style="background-repeat: no-repeat; position: absolute; top: 10px; right: 10px; height: 40px; width: auto" data-bind="attr: { src: Type == 'Pokémon' ? 'Images/PokemonPng/' + PokeMon + '.png' :  Type == 'Pokéstop' ? 'Images/pokestop.png' : 'Images/pokegym.png'  }" />
            <div data-bind="text: Type == 'Pokémon' ? PokeMon :  Type == 'Pokéstop' ? 'Pokéstop' : 'Pokégym' "></div>
            <div style="width: 180px; text-overflow: ellipsis; overflow: hidden" data-bind="text: Notes, visible: Notes"></div>
        </div>
    </div>
</div>


<div id="notificationPanel" style="height: 130px; width: 300px; position: absolute; bottom:10px; right: -300px;  background: white; z-index: 1000000000; border: 1px solid #ddd; box-shadow: 0 6px 12px rgba(0,0,0,.175); border-radius: 5px; ">
    <div id="notificationContent" style="margin: 5px">
        <h2 style="font-size: 18px; margin-bottom: 15px; ">Notification</h2>
        <div style="width: 100%" data-bind="text: viewModel.Notification.Text"></div>
    </div>
</div>


